<div class="top-row pl-4 navbar navbar-dark">
    <NavLink class="navbar-brand" href="">Клевер</NavLink>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Главная
            </NavLink>
        </li>
        @if (!UserIsAuthorized)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="oi oi-account-login" aria-hidden="true"></span> Войти
                </NavLink>
            </li>
        }
        @if (UserIsAuthorized)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <span class="oi oi-person" aria-hidden="true"></span> Профиль
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="favorites">
                    <span class="oi oi-bookmark" aria-hidden="true"></span> Избранное
                </NavLink>
            </li>
        }
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="oi oi-info" aria-hidden="true"></span> О проекте
            </NavLink>
        </li>
        @if (UserIsAuthorized)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="login" Match="NavLinkMatch.All" @onclick="LogOut">
                    <span class="oi oi-account-logout" aria-hidden="true"></span> Выйти
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {
    private bool UserIsAuthorized = true;

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void LogOut()
    {
        UserIsAuthorized = false;
    }
}
